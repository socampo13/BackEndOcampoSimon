<section class="container pt-5">
    <h1>Ingresa producto</h1>

<form action="/api/productos/guardar" class="needs-validation" novalidate enctype="multipart/form-data" method="POST">
    <div class="form-row">
      <div class="col-md-6 mb-3">
        <label for="validationTooltip01">Nombre producto</label>
        <input type="text" class="form-control" id="validationTooltip01" value="Nombre" required>
        <div class="valid-tooltip">
          
        </div>
      </div>
      <div class="col-md-6 mb-3">
        <label for="validationTooltip02">Precio</label>
        <input type="text" class="form-control" id="validationTooltip02" value="$0000" required>
        <div class="valid-tooltip">
          
        </div>
      </div>
      <div class="form-group">
        <input type="file" name="Single" />
        <input type="submit" value="Ingresar producto" />
      </div>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Ingresar</button>
  </form>
</section>